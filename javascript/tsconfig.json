{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments" : true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES6",
        "sourceMap": true,
        "lib": [
            "ES6",
            "DOM"
        ],
        "baseUrl": ".",
        "paths": {
            "@yuuno2/*": ["packages/*/src"]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts"
    ]
}